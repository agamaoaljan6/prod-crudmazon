<h1 class="product-index" align="center">All Products List</h1>
<div class="container">
    <div class="row">
        <% @products.each do |product| %>
       
      
        <div class="col-sm-6">
            <div class="card card-body bg-light">
                <div class="product-title">
                    <%= link_to product.title, product_path(product)%>
                </div>
                <div class="product-body">
                    <%= product.description%>
                </div>
            </div>
        </div>
       


        <%end%>
    </div>
</div>