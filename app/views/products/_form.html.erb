<%= render '/shared/errors', obj: @product%>

<div class="container-fluid offset-2">
<div class="form-group row">
    <div class="col-md-10 title-page">
        <%= form_for(@product, :html => {class:'form-horizontal', role: "form"}) do |f| %>
        <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label :title%>
            </div>
            <div class="col-sm-10">
                <%= f.text_field :title, class: "form-control", placeholder: "Name of Product", autofocus: true %>
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label :description%>
            </div>
            <div class="col-sm-10">
                <%= f.text_area :description,rows:10,class: "form-control", placeholder: "Description", autofocus: true %>
            </div>
        </div>
        
        <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label :price%>
            </div>
            <div class="col-sm-2">
                <%= f.text_field :price, class: "form-control", placeholder: "$$", autofocus: true %>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-2">
                <%= f.submit class: 'btn btn-primary btn-lg' %>
            </div>
        </div>

        <%end%>

    </div>
</div>
</div>
<div class="col-4 offset-4">
    [ <%= link_to  "Cancel create and return to product listing", products_path %> ]
    </div>