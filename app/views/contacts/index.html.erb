<h1 align="center" class="mb-5">Contact Us</h1>

<div class="container-fluid offset-2 contact-us">
    <div class="form-group row ">
        <div class="col-sm-10">
            <%= form_for contact_path do |f| %>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :name%>
                </div>
                <div class="col-sm-10">
                    <%= f.text_field :name, class: "form-control", autofocus: true %>
                </div>
            </div>
    
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :email%>
                </div>
                <div class="col-sm-10">
                    <%= f.text_field :email,rows:10,class: "form-control", autofocus: true %>
                </div>
            </div>
            

            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-2">
                    <%= f.submit class: 'btn btn-primary btn-lg' %>
                </div>
            </div>
    
            <%end%>
    
        </div>
    </div>
    </div>
